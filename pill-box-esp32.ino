void setNtp()
{
  configTime(0, 0, "pool.ntp.org");

  Serial.print("Waiting for NTP time sync: ");
  time_t nowSecs = 0;
  while (nowSecs < 8 * 3600 * 2)
  {
    delay(500);
    Serial.print(".");
    yield();
    nowSecs = time(nullptr);
  }

  Serial.println();
  struct tm timeinfo;
  gmtime_r(&nowSecs, &timeinfo);
  Serial.print("Current time: ");
  Serial.print(asctime(&timeinfo));
}
